{
  "name": "rn-starter",
  "version": "1.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/tsyirvo/react-native-starter.git"
  },
  "bugs": {
    "url": "https://github.com/tsyirvo/react-native-starter/issues"
  },
  "scripts": {
    "start": "react-native start",
    "//// SETUP ////": "",
    "install:all": "yarn && npx pod-install",
    "clean": "watchman watch-del-all && rm -rf $TMPDIR/react-* && rm -rf $TMPDIR/metro-* && rm -rf node_modules",
    "//// IOS ////": "",
    "ios:development": "react-native run-ios --scheme=rnStarter-development",
    "ios:staging": "react-native run-ios --scheme=rnStarter-staging",
    "ios:production": "react-native run-ios --scheme=rnStarter-production",
    "//// ANDROID ////": "",
    "android:development": "react-native run-android --variant=developmentDebug --appIdSuffix=development",
    "android:staging": "react-native run-android --variant=stagingDebug --appIdSuffix=staging",
    "android:production": "react-native run-android --variant=productionDebug",
    "//// TESTS ////": "",
    "test": "jest --runInBand --outputFile test-results.json --json",
    "test:staged": "jest -o --passWithNoTests --runInBand",
    "//// E2E ////": "",
    "test:android:build": "detox build -c android.sim.debug --workers 2",
    "test:android": "detox test -c android.sim.debug --workers 1",
    "test:android:release:build": "detox build -c android.sim.release --workers 1",
    "test:android:release": "detox test -c android.sim.release --record-logs all --debug-synchronization 500 --take-screenshots failing --record-videos failing --workers 1",
    "test:ios:build": "detox build -c ios.sim.debug --workers 1",
    "test:ios": "detox test -c ios.sim.debug --workers 1",
    "test:ios:release:build": "detox build -c ios.sim.release --workers 1",
    "test:ios:release": "detox test -c ios.sim.release --record-logs all --debug-synchronization 500 --take-screenshots failing --record-videos failing --workers 1",
    "//// QUALITY ////": "",
    "tsc": "tsc --noEmit",
    "lint": "eslint ./ --ext .js,.ts,.tsx --cache --fix --ignore-path .gitignore",
    "prettify": "yarn prettier --write './**/*.{js,ts,tsx}'",
    "prestorybook": "rnstl",
    "storybook": "(adb reverse tcp:7007 tcp:7007 || true) && start-storybook",
    "//// UTILITIES ////": "",
    "image:add": "node scripts/images.js",
    "generate:page": "npx hygen generators page",
    "generate:fc": "npx hygen generators fc",
    "generate:class": "npx hygen generators class",
    "//// VERSIONNING ////": "",
    "version:bump": "standard-version --skip.commit --skip.changelog --skip.tag",
    "version:changelog": "standard-version --skip.commit --skip.tag --dry-run --silent --bumpFiles \"package.json\" | awk 'NR > 5 { print }' | sed \"s/(\\[.*$//\" | sed \"s/[^[:alnum:][:punct:][:space:]]//g\"",
    "version:tag": "standard-version",
    "//// MISC ////": "",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "bash -c tsc --noEmit",
      "yarn lint",
      "yarn prettify"
    ]
  },
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "./src",
        "./storybook"
      ],
      "pattern": "**/*.stories.tsx",
      "outputFile": "./storybook/storyLoader.js"
    }
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.15.13",
    "@react-native-masked-view/masked-view": "0.2.6",
    "@react-navigation/native": "6.0.6",
    "@react-navigation/stack": "6.0.11",
    "i18next": "19.8.4",
    "react": "17.0.2",
    "react-i18next": "11.14.3",
    "react-native": "0.66.3",
    "react-native-code-push": "7.0.4",
    "react-native-config": "1.4.5",
    "react-native-gesture-handler": "1.10.3",
    "react-native-reanimated": "2.2.4",
    "react-native-safe-area-context": "3.3.2",
    "react-native-screens": "3.9.0",
    "styled-components": "5.3.3",
    "styled-system": "5.1.5"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/runtime": "7.16.3",
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@storybook/addon-actions": "5.3.21",
    "@storybook/addon-backgrounds": "5.3.21",
    "@storybook/addon-knobs": "5.3.21",
    "@storybook/addon-ondevice-actions": "5.3.23",
    "@storybook/addon-ondevice-backgrounds": "5.3.23",
    "@storybook/addon-ondevice-knobs": "5.3.25",
    "@storybook/react-native": "5.3.25",
    "@storybook/react-native-server": "5.3.23",
    "@testing-library/jest-native": "4.0.4",
    "@testing-library/react-native": "8.0.0",
    "@types/jest": "27.0.3",
    "@types/lodash": "4.14.177",
    "@types/react": "17.0.37",
    "@types/react-native": "0.66.6",
    "@types/react-navigation": "3.4.0",
    "@types/react-test-renderer": "17.0.1",
    "@types/styled-components": "5.1.15",
    "@types/styled-system": "5.1.13",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "27.3.1",
    "babel-loader": "8.2.3",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-transform-remove-console": "6.9.4",
    "chalk": "4.1.2",
    "danger": "10.7.1",
    "danger-plugin-jest": "1.3.0",
    "danger-plugin-todos": "1.3.0",
    "detox": "19.1.0",
    "eslint": "8.3.0",
    "eslint-config-airbnb-typescript": "16.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-babel-module": "5.3.1",
    "eslint-import-resolver-react-native": "0.2.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-module-resolver": "1.4.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "7.0.4",
    "hygen": "6.1.0",
    "imageoptim": "0.5.0",
    "is-image": "3.0.0",
    "jest": "27.3.1",
    "jest-circus": "27.3.1",
    "lint-staged": "12.1.2",
    "lodash": "4.17.21",
    "metro-react-native-babel-preset": "0.66.2",
    "ora": "6.0.1",
    "path": "0.12.7",
    "prettier": "2.5.0",
    "react-dom": "17.0.1",
    "react-native-dev-menu": "4.0.2",
    "react-native-storybook-loader": "2.0.2",
    "react-test-renderer": "17.0.2",
    "sharp": "0.29.3",
    "standard-version": "9.3.2",
    "ts-jest": "27.0.7",
    "typescript": "4.5.2"
  },
  "resolutions": {
    "graceful-fs": "^4.2.4"
  }
}
