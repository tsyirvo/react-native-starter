{
  "name": "rn-starter",
  "version": "1.1.0",
  "description": "Default starter with basic builtin and configs used in my React Native projects",
  "author": "Gabriel Hofman <gabriel.hofman.00@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsyirvo/react-native-starter.git"
  },
  "bugs": {
    "url": "https://github.com/tsyirvo/react-native-starter/issues"
  },
  "keywords": [
    "React Native",
    "Starter",
    "Boilerplate"
  ],
  "license": "ISC",
  "scripts": {
    "start": "react-native start",
    "//// SETUP ////": "",
    "install:all": "yarn && npx pod-install",
    "clean": "watchman watch-del-all && rm -rf $TMPDIR/react-* && rm -rf $TMPDIR/metro-* && rm -rf node_modules",
    "//// IOS ////": "",
    "ios:development": "react-native run-ios --scheme=rnStarter-development",
    "ios:staging": "react-native run-ios --scheme=rnStarter-staging",
    "ios:production": "react-native run-ios --scheme=rnStarter-production",
    "//// ANDROID ////": "",
    "android:development": "react-native run-android --variant=developmentDebug --appIdSuffix=development",
    "android:staging": "react-native run-android --variant=stagingDebug --appIdSuffix=staging",
    "android:production": "react-native run-android --variant=productionDebug",
    "//// TESTS ////": "",
    "test": "jest --runInBand",
    "test:staged": "jest -o --passWithNoTests --runInBand",
    "//// E2E ////": "",
    "test:android:build": "detox build -c android.sim.debug --workers 2",
    "test:android": "detox test -c android.sim.debug --workers 1",
    "test:android:release:build": "detox build -c android.sim.release --workers 1",
    "test:android:release": "detox test -c android.sim.release --record-logs all --debug-synchronization 500 --take-screenshots failing --record-videos failing --workers 1",
    "test:ios:build": "detox build -c ios.sim.debug --workers 1",
    "test:ios": "detox test -c ios.sim.debug --workers 1",
    "test:ios:release:build": "detox build -c ios.sim.release --workers 1",
    "test:ios:release": "detox test -c ios.sim.release --record-logs all --debug-synchronization 500 --take-screenshots failing --record-videos failing --workers 1",
    "//// QUALITY ////": "",
    "tsc": "tsc",
    "lint": "eslint ./ --ext .js,.ts,.tsx --fix --ignore-path .gitignore",
    "prettify": "yarn prettier --write './**/*.{js,ts,tsx}'",
    "//// UTILITIES ////": "",
    "image:add": "node scripts/images.js",
    "generate:page": "npx hygen generators page",
    "generate:fc": "npx hygen generators fc",
    "generate:class": "npx hygen generators class",
    "generate:icons": "svgr --native --typescript --ignore-existing --svgo-config src/components/icons/svgs/config/svgo.json --index-template src/components/icons/svgs/config/index-template.js --template src/components/icons/svgs/config/icon-template.js --out-dir src/components/icons/components src/components/icons/svgs",
    "//// VERSIONNING ////": "",
    "version:bump": "standard-version --skip.commit --skip.changelog --skip.tag",
    "version:changelog": "standard-version --skip.commit --skip.tag --dry-run --silent --bumpFiles \"package.json\" | awk 'NR > 5 { print }' | sed \"s/(\\[.*$//\" | sed \"s/[^[:alnum:][:punct:][:space:]]//g\"",
    "version:tag": "standard-version",
    "//// MISC ////": "",
    "perf:bundle": "npx react-native-bjsxBracketSameLineundle-visualizer",
    "prepare": "husky install"
  },
  "dependencies": {
    "@react-native-masked-view/masked-view": "0.2.6",
    "@react-navigation/core": "6.1.0",
    "@react-navigation/native": "6.0.6",
    "@react-navigation/stack": "6.0.11",
    "i18n-js": "3.8.0",
    "react": "17.0.2",
    "react-native": "0.66.3",
    "react-native-code-push": "7.0.4",
    "react-native-config": "1.4.5",
    "react-native-gesture-handler": "2.1.0",
    "react-native-localize": "2.1.5",
    "react-native-mmkv": "1.5.3",
    "react-native-reanimated": "2.3.0",
    "react-native-safe-area-context": "3.3.2",
    "react-native-screens": "3.10.1",
    "react-native-svg": "12.1.1",
    "styled-components": "5.3.3",
    "styled-system": "5.1.5"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/plugin-transform-react-jsx": "7.16.0",
    "@babel/runtime": "7.16.3",
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@svgr/cli": "5.5.0",
    "@testing-library/jest-native": "4.0.4",
    "@testing-library/react-native": "8.0.0",
    "@types/i18n-js": "3.8.2",
    "@types/jest": "27.0.3",
    "@types/lodash": "4.14.177",
    "@types/react": "17.0.37",
    "@types/react-native": "0.66.6",
    "@types/react-navigation": "3.4.0",
    "@types/react-test-renderer": "17.0.1",
    "@types/styled-components": "5.1.15",
    "@types/styled-system": "5.1.13",
    "babel-jest": "27.3.1",
    "babel-loader": "8.2.3",
    "babel-plugin-root-import": "6.6.0",
    "babel-plugin-transform-remove-console": "6.9.4",
    "chalk": "4.1.2",
    "detox": "19.1.0",
    "eslint": "8.3.0",
    "eslint-config-tsyirvo-react-native": "1.1.0",
    "husky": "7.0.4",
    "hygen": "6.1.0",
    "imageoptim": "0.5.0",
    "is-image": "3.0.0",
    "jest": "27.3.1",
    "jest-circus": "27.3.1",
    "lint-staged": "12.1.2",
    "lodash": "4.17.21",
    "metro-react-native-babel-preset": "0.66.2",
    "ora": "6.0.1",
    "patch-package": "6.4.7",
    "path": "0.12.7",
    "prettier": "2.5.0",
    "react-dom": "17.0.1",
    "react-native-dev-menu": "4.0.2",
    "react-test-renderer": "17.0.2",
    "sharp": "0.29.3",
    "standard-version": "9.3.2",
    "ts-jest": "27.0.7",
    "typescript": "4.5.2"
  },
  "resolutions": {
    "graceful-fs": "^4.2.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "bash -c tsc --noEmit",
      "bash -c yarn lint",
      "bash -c yarn prettify"
    ]
  },
  "jest": {
    "cacheDirectory": ".jest/cache",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "^styled-components$": "<rootDir>/node_modules/styled-components/native/dist/styled-components.native.cjs.js"
    },
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "setupFiles": [
      "./node_modules/react-native-gesture-handler/jestSetup.js"
    ],
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "e2e/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "useTabs": false,
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "jsxSingleQuote": false,
    "semi": true
  },
  "eslintConfig": {
    "extends": [
      "tsyirvo-react-native"
    ],
    "ignorePatterns": "src/components/icons/components/"
  }
}
