{
  "name": "rn-starter",
  "version": "1.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/tsyirvo/react-native-starter.git"
  },
  "bugs": {
    "url": "https://github.com/tsyirvo/react-native-starter/issues"
  },
  "scripts": {
    "start": "react-native start",
    "clean": "watchman watch-del-all && rm -rf $TMPDIR/react-* && rm -rf $TMPDIR/metro-* && rm -rf node_modules",
    "install:all": "yarn && npx pod-install",
    "//// SIMULATORS ////": "",
    "ios:development": "react-native run-ios --scheme=rnStarter-development",
    "ios:staging": "react-native run-ios --scheme=rnStarter-staging",
    "ios:production": "react-native run-ios --scheme=rnStarter-production",
    "android:development": "react-native run-android --variant=developmentDebug --appIdSuffix=development",
    "android:staging": "react-native run-android --variant=stagingDebug --appIdSuffix=staging",
    "android:production": "react-native run-android --variant=productionDebug",
    "//// TESTS ////": "",
    "test": "jest --runInBand --outputFile test-results.json --json",
    "test:staged": "jest -o --passWithNoTests --runInBand",
    "//// QUALITY ////": "",
    "tsc": "tsc --noEmit --project tsconfig.json",
    "lint": "eslint ./ --ext .js,.ts,.tsx --cache --fix --ignore-path .gitignore",
    "prettify": "yarn prettier --write './**/*.{ts,tsx}'",
    "prestorybook": "rnstl",
    "storybook": "(adb reverse tcp:7007 tcp:7007 || true) && start-storybook",
    "//// UTILITIES ////": "",
    "image:add": "node scripts/images.js",
    "generate:page": "npx hygen generators page",
    "generate:fc": "npx hygen generators fc",
    "generate:class": "npx hygen generators class",
    "//// VERSIONNING ////": "",
    "version:bump": "standard-version --skip.commit --skip.changelog --skip.tag",
    "version:changelog": "standard-version --skip.commit --skip.tag --dry-run --silent --bumpFiles \"package.json\" | awk 'NR > 5 { print }' | sed \"s/(\\[.*$//\" | sed \"s/[^[:alnum:][:punct:][:space:]]//g\"",
    "version:tag": "standard-version",
    "//// MISCELLANEOUS ////": "",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn prettify"
    ]
  },
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "./src",
        "./storybook"
      ],
      "pattern": "**/*.stories.tsx",
      "outputFile": "./storybook/storyLoader.js"
    }
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.14.1",
    "@react-native-community/masked-view": "0.1.10",
    "@react-navigation/native": "5.9.3",
    "@react-navigation/stack": "5.14.3",
    "i18next": "19.9.2",
    "react": "17.0.1",
    "react-i18next": "11.14.0",
    "react-native": "0.64.0",
    "react-native-code-push": "7.0.0",
    "react-native-config": "1.4.2",
    "react-native-gesture-handler": "1.10.3",
    "react-native-reanimated": "2.0.0",
    "react-native-safe-area-context": "3.2.0",
    "react-native-screens": "2.18.1",
    "styled-components": "5.2.1",
    "styled-system": "5.1.5"
  },
  "devDependencies": {
    "@babel/core": "7.13.10",
    "@babel/runtime": "7.13.10",
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@storybook/addon-actions": "5.3.21",
    "@storybook/addon-backgrounds": "5.3.21",
    "@storybook/addon-knobs": "5.3.21",
    "@storybook/addon-ondevice-actions": "5.3.23",
    "@storybook/addon-ondevice-backgrounds": "5.3.23",
    "@storybook/addon-ondevice-knobs": "5.3.25",
    "@storybook/react-native": "5.3.25",
    "@storybook/react-native-server": "5.3.23",
    "@testing-library/jest-native": "4.0.1",
    "@testing-library/react-native": "7.2.0",
    "@types/jest": "26.0.21",
    "@types/lodash": "4.14.168",
    "@types/react": "17.0.1",
    "@types/react-native": "0.64.0",
    "@types/react-navigation": "3.4.0",
    "@types/react-test-renderer": "17.0.1",
    "@types/styled-components": "5.1.3",
    "@types/styled-system": "5.1.10",
    "@typescript-eslint/eslint-plugin": "4.18.0",
    "@typescript-eslint/parser": "4.18.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-transform-remove-console": "6.9.4",
    "chalk": "4.1.0",
    "danger": "10.6.3",
    "danger-plugin-jest": "1.3.0",
    "danger-plugin-todos": "1.3.0",
    "detox": "18.7.1",
    "eslint": "7.22.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-import-resolver-babel-module": "5.2.0",
    "eslint-import-resolver-react-native": "0.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-module-resolver": "1.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "5.1.3",
    "hygen": "6.0.4",
    "imageoptim": "0.5.0",
    "is-image": "3.0.0",
    "jest": "26.6.3",
    "jest-circus": "26.6.3",
    "lint-staged": "10.5.4",
    "lodash": "4.17.21",
    "metro-react-native-babel-preset": "0.64.0",
    "ora": "5.4.0",
    "path": "0.12.7",
    "prettier": "2.2.1",
    "react-dom": "17.0.1",
    "react-native-dev-menu": "4.0.2",
    "react-native-storybook-loader": "2.0.2",
    "react-test-renderer": "17.0.1",
    "sharp": "0.27.2",
    "standard-version": "9.1.1",
    "ts-jest": "26.5.4",
    "typescript": "4.2.3"
  }
}
