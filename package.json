    "lint-staged": "10.3.0",
    "lodash": "4.17.20",
    "metro-react-native-babel-preset": "0.62.0",
    "ora": "5.1.0",
    "path": "0.12.7",
    "prettier": "2.1.1",
    "react-dom": "16.11.0",
    "react-native-dev-menu": "4.0.2",
    "react-native-storybook-loader": "2.0.2",
    "react-test-renderer": "16.13.1",
    "sharp": "0.26.0",
